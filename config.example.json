{
    "email": {
        "smtp_server": "smtp.qq.com",
        "sender": "发送邮箱",
        "password": "smtp授权码",
        "receiver": "接收邮箱"
    },
    "companies": [
        {
            "name": "网易雷火",
            "provider": "netease_leihuo",
            "headers": {"Cookie": "从浏览器复制的整串 Cookie"}
        },
        {
            "name": "米哈游",
            "provider": "mihoyo",
            "headers": {"Authorization": "Bearer <token>"}
        },
        {
            "name": "网易互娱",
            "provider": "netease_huyu",
            "headers": {"Cookie": "从浏览器复制的整串 Cookie（含 SESSION）"}
        },
        {
            "name": "MokaHR",
            "provider": "mokahr",
            "extra": {
                "request_body": {
                    "orgId": "hypergryph(以鹰角为例)",
                    "siteId": 26326
                }
            },
            "headers": {"Cookie": "connect.sid=...; moka-token=...; ..."}
        }
    ],
    "WORK_HOURS": {
        "start_hour": 10,
        "end_hour": 20
    },
    "sleep_seconds": 3600,
    "logging": {
        "console_enabled": true,
        "file_enabled": true,
        "file": "monitor.log",
        "level": "INFO",
        "format": "%(asctime)s - %(levelname)s - %(message)s"
    }
}